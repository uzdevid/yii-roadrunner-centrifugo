{
    "name": "uzdevid/yii-centrifugo",
    "type": "library",
    "description": "Centrifugo & RoadRunner based Yii runner",
    "keywords": [
        "php",
        "yii3",
        "centrifugo",
        "roadrunner-centrifugo"
    ],
    "homepage": "https://uzdevid.com/",
    "license": "MIT",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^8.1",
        "psr/container": "^2.0",
        "yiisoft/config": "^1.1",
        "yiisoft/definitions": "^1.0|^2.0|^3.0",
        "yiisoft/di": "^1.0",
        "yiisoft/error-handler": "^3.0",
        "yiisoft/log": "^2.0",
        "yiisoft/log-target-file": "^3.0",
        "yiisoft/yii-runner": "^2.0",
        "roadrunner-php/centrifugo": "^2.2"
    },
    "require-dev": {
        "maglnet/composer-require-checker": "^4.7",
        "phpunit/phpunit": "^10.5",
        "rector/rector": "^1.2",
        "roave/infection-static-analysis-plugin": "^1.34",
        "spatie/phpunit-watcher": "^1.23",
        "vimeo/psalm": "^5.20",
        "yiisoft/test-support": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "UzDevid\\Yii\\Runner\\Centrifugo\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "UzDevid\\Yii\\Runner\\Centrifugo\\Tests\\": "tests"
        }
    },
    "extra": {
        "config-plugin-options": {
            "source-directory": "config",
            "build-merge-plan": false
        },
        "config-plugin": {
            "di": "di-*.php",
            "params": "params.php"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "infection/extension-installer": true,
            "composer/package-versions-deprecated": true,
            "yiisoft/config": true
        }
    },
    "scripts": {
        "test": "phpunit --testdox --no-interaction",
        "test-watch": "phpunit-watcher watch"
    }
}
